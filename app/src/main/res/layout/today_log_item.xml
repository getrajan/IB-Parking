<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginHorizontal="10dp"
    android:layout_marginVertical="5dp"
    app:cardCornerRadius="8dp"
    android:id="@+id/todayLogItemCV"
    android:padding="10dp"
    android:background="@color/primaryColor">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/todayLogStartStationTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Start Station"
            android:fontFamily="@font/poppins_regular"
            android:padding="5dp"
            />
        <TextView
            android:id="@+id/to"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="to"
            android:layout_toRightOf="@id/todayLogStartStationTV"
            android:fontFamily="@font/poppins_regular"
            android:padding="5dp"
            />
        <TextView
            android:id="@+id/todayLogEndStationTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="End Station"
            android:layout_toRightOf="@id/to"
            android:fontFamily="@font/poppins_regular"
            android:padding="5dp"
            />
        <TextView
            android:id="@+id/todayLogFareTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fare"
            android:layout_below="@id/to"
            android:layout_marginHorizontal="10dp"
            android:fontFamily="@font/poppins_regular"
            android:padding="5dp"
            />
        <TextView
            android:id="@+id/todayLogTypeTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ticket Type"
            android:layout_below="@id/to"
            android:layout_toRightOf="@id/todayLogFareTV"
            android:layout_marginHorizontal="10dp"
            android:fontFamily="@font/poppins_regular"
            android:padding="5dp"
            />
    </RelativeLayout>
</androidx.cardview.widget.CardView>